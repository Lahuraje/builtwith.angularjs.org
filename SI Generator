<body >
	<center>
	<div class="mydiv">
	<div class="my" ng-app="myapp" ng-controller="myctrl" ng-init="pamount=;Price=;inteerval=;si=;tamt=0">
		<table>
			<tr>
				<td><label>Principle Amount</label></td>
				<td><input type='text' ng-model='pamount' placeholder='Principle amount' autofocus></td></tr><tr></tr><tr></tr>
			<tr>
				<td><label>Interest Rate</label></td>
				<td><input type='text' ng-model='rate' placeholder='Rate'></td></tr><tr></tr><tr></tr>
			<tr>
				<td><label>Interest Duration</label></td>
				<td><input type='text' ng-model='interval' placeholder='Time Duration'></td></tr><tr></tr><tr></tr>
			<tr>
				<td><label>Simple Interest</label></td>
				<td>{{si=pamount*rate*interval/100 | currency}}</td></tr><tr></tr><tr></tr>
			
			<tr>
				<td><label>Total Amount</label></td>
				<td>{{tamt() | currency}}</td></tr>
	</table>
	</div>
</div>
</center>
	<script>
	var app=angular.module('myapp',[]);
	app.controller('myctrl',function($scope) 
	{
		// body...
		$scope.pamount="";
		$scope.rate="";
		$scope.interval=""
		$scope.si="";
		$scope.tamt=function(){
			return ($scope.pamount/1 + $scope.si);
		}
	});

	</script>

